{
  "name": "trending-topics",
  "scripts": {
    "dev": "bun run --hot src/index.ts & bun run watch:css",
    "build:css": "bunx @tailwindcss/cli -i src/assets/css/*.css -o src/static/css/*.css",
    "build:js": "bun build src/assets/js/main.ts --outdir src/static/js --target browser",
    "build": "bun run build:css && bun run build:js",
    "watch:css": "bunx @tailwindcss/cli -i src/assets/css/*.css -o src/static/css/*.css --watch",
    "watch:js": "bun build src/assets/js/main.ts --outdir src/static/js --target browser --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19",
    "hono": "^4.11.3",
    "marked": "^17.0.1",
    "postgres": "^3.4.8",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "vitest": "^4.0.17"
  }
}
